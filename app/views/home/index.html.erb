<h1>Blogit - Ruby on Rails Blogger</h1>

<% if session[:name] %>

<ul>
	<li><%= link_to "Users", users_path %> (<%= @user.count %>)</li>
	<li><%= link_to "Posts", posts_path %> (<%= @post.count %>)</li> 
	<li><%= link_to "my Posts", posts_path %> (<%= @my_post.count %>)</li> 
	<li><%= link_to "Comments", comments_path %></li>
</ul>
<p>
<%= "Current Logged in User: #{session[:name]}" %>
<p>
<p>
<%= link_to 'Logout', logout_path %>
<p>

<% else %>


<p>
<%= "Please login to access the System" %>
<p>

<%= render 'form' %>

<% end %>

