<h1>All Posts from all Users</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Updated at</th>
    <th>Creator</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th>Comments</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.updated_at.strftime ("%Y-%m-%d %H:%M") %></td>
    <td><%= post.created_by  %></td>


    <td><%= link_to 'Show', post %></td>
               <td>
		 <% if post.created_by == session[:name] %>
                      <%= link_to 'Edit', edit_post_path(post) %>
		 <% else %>
                      <%= '----' %>
	         <% end %>
		 <td/>

  <td>(<%= post.comments.count %>)</td>
 </tr>
<% end %>
</table>

